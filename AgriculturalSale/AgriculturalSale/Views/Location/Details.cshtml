@model Location

@{
    ViewData["Title"] = Model.SideWalk;
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p><h1>Details for @Model.SideWalk</h1></p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group">
                    <b><label asp-for="SideWalk" class="control-label"></label></b>
                    <input asp-for="SideWalk" class="form-control" readonly />
                    <span asp-validation-for="SideWalk" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <b>Municipality: </b> <br /> 
                    <a asp-controller="Municipality" asp-action="Details" asp-route-id="@Model.MunicipalityId">
                        <i class="bi bi-geo-alt-fill">@Model.Municipality.name</i>
                    </a><br />
                    <span asp-validation-for="MunicipalityId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <b><label asp-for="Details" class="control-label"></label></b>
                    <textarea asp-for="Details" class="form-control" readonly></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                </div>
            </div>
        </div>
    </div>
</div>
