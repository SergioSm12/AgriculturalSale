@using AgriculturalSale.Data.ViewModels
@model NewLocationVM

@{

    ViewData["Title"] = "Create a new Location";
}

<div class="row">
    <div class="col-md-10 offset-1">
        <p>
            <h4>Create a new location</h4>
        </p>
        <div class="row">
            <div class="col-md-10 offset-1">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SideWalk" class="control-label"></label>
                                <input asp-for="SideWalk" class="form-control" />
                                <span asp-validation-for="SideWalk" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MunicipalityId" class="control-label"></label>
                                <select asp-for="MunicipalityId" class="form-control" asp-items="ViewBag.Municipalities"></select>
                                <span asp-validation-for="MunicipalityId" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Details" class="control-label"></label>
                                    <textarea asp-for="Details" class="form-control"></textarea>
                                    <span asp-validation-for="Details" class="text-danger"></span>
                                </div>
                            </div>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>