@model IEnumerable<ProductType>
@{
    ViewData["Title"] = "Product Type List";
}

<div class="row">
    <table class=" col-md-8  table table-striped table-bordered">
        <thead class="cardh">
        <th>@Html.DisplayNameFor(m=> m.ImageUrl)</th>
        <th>@Html.DisplayNameFor(m=> m.Name)</th>
        <th>@Html.DisplayNameFor(m=> m.Details)</th>
        <th>Actions</th>
        </thead>
        <tbody>
            @foreach (var pt in Model)
            {
                <tr>

                    <td class="align-middle"><img class="foto" src="@pt.ImageUrl" alt="@pt.Name"></td>
                    <td class="align-middle">@pt.Name</td>
                    <td class="align-middle">@pt.Details</td>
                    <td>
                        <a class="btn btn-outline-primary" style="margin-bottom: 5px" asp-action="Edit" asp-route-id="@pt.Id"><i class="bi bi-pen"></i></a>
                        <br />
                        <a class="btn btn-outline-info" style="margin-bottom: 5px" asp-action="Details" asp-route-id="@pt.Id"><i class="bi bi-info-circle"></i></a>
                        <br />
                        <a class="btn btn-outline-danger" style="margin-bottom: 5px" asp-action="Delete" asp-route-id="@pt.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-dark mb-4" style="position:fixed; right: 25px; bottom : 35px;">
    <a asp-controller="ProductType" asp-action="Create" class="btn btn-success text-dark">
        <i class="bi bi-plus-circle"></i> Add New
    </a>

</div>
